rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if a user is authenticated.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the signed-in user is an admin or superadmin.
    function isAdmin() {
      // Allow specific superadmin emails to bypass Firestore read for initial setup
      if (request.auth.token.email == 'lucasmoura@sentenergia.com' || request.auth.token.email == 'eduardo.w@sentenergia.com') {
        return true;
      }
      // Check for admin/superadmin role in Firestore, ensuring the user doc exists.
      return isSignedIn() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.type == 'admin' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.type == 'superadmin');
    }

    // Helper function to check if the signed-in user is the owner of a specific lead.
    function isLeadOwner(leadId) {
      // Ensure the lead document exists before trying to access its data.
      return isSignedIn() &&
             exists(/databases/$(database)/documents/crm_leads/$(leadId)) &&
             get(/databases/$(database)/documents/crm_leads/$(leadId)).data.userId == request.auth.uid;
    }

    // --- Path Rules ---

    // Profile photos: Users can manage their own photo. Admins can manage any.
    match /profile_photos/{userId}/{allPaths=**} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
    }

    // General lead documents (proposals, bills, etc.).
    match /crm_lead_documents/{leadId}/{allPaths=**} {
      allow read, write: if isSignedIn() && (isLeadOwner(leadId) || isAdmin());
    }
    
    // Feedback attachments for leads.
    match /crm_lead_feedback/{leadId}/{allPaths=**} {
      allow read, write: if isSignedIn() && (isLeadOwner(leadId) || isAdmin());
    }
    
    // Media (images, audio) sent in the chat.
    match /chat_media/{leadId}/{allPaths=**} {
      allow read, write: if isSignedIn() && (isLeadOwner(leadId) || isAdmin());
    }

    // Public files (e.g., for WhatsApp templates) can be read by anyone.
    match /public/{allPaths=**} {
      allow get;
      allow write: if isAdmin();
    }
  }
}
