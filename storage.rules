
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regra flexível: Permite leitura e escrita para qualquer usuário autenticado.
    // A lógica de quem pode ver o quê é controlada pelo código do aplicativo.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
