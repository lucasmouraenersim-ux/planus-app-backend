rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if the requesting user is an admin.
    // It reads the user's document from Firestore.
    function isUserAdmin(userId) {
      return exists(/databases/(default)/documents/users/$(userId)) &&
             get(/databases/(default)/documents/users/$(userId)).data.type == 'admin';
    }

    // Helper function to check if the requesting user is the assigned seller for a lead.
    // It reads the lead's document from Firestore.
    function isLeadOwner(leadId, userId) {
      return exists(/databases/(default)/documents/crm_leads/$(leadId)) &&
             get(/databases/(default)/documents/crm_leads/$(leadId)).data.userId == userId;
    }

    // Allow users to read/write their own profile photos.
    match /profile_photos/{userId}/{allPaths=**} {
      allow read: if true; // Profile photos are often public.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow admins or the lead's assigned seller to access lead-specific documents.
    match /crm_lead_documents/{leadId}/{allPaths=**} {
      allow read, write: if request.auth != null &&
                            (isUserAdmin(request.auth.uid) || isLeadOwner(leadId, request.auth.uid));
    }

    // Allow admins or the lead's assigned seller to access chat media.
    match /chat_media/{leadId}/{allPaths=**} {
      allow read, write: if request.auth != null &&
                            (isUserAdmin(request.auth.uid) || isLeadOwner(leadId, request.auth.uid));
    }
  }
}
