
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite que qualquer pessoa leia as mídias, facilitando a exibição no chat.
    // Apenas usuários autenticados podem escrever.
    match /chat_media/{leadId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }

    // Mesma lógica para documentos do CRM
    match /crm_lead_documents/{leadId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }

    // Fotos de perfil podem ser lidas por todos, mas apenas o próprio usuário pode alterá-la.
    match /profile_photos/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
