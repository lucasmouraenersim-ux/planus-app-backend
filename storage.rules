rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // ========= Funções Reutilizáveis =========
    
    // Verifica se o usuário autenticado é um administrador
    function isUserAdmin(userId) {
      return exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.type == 'admin';
    }

    // Verifica se o usuário autenticado é o proprietário do lead
    function isLeadOwner(userId, leadId) {
      return exists(/databases/$(database)/documents/crm_leads/$(leadId)) &&
             get(/databases/$(database)/documents/crm_leads/$(leadId)).data.userId == userId;
    }


    // ========= Regras por Pasta =========

    // Regras para fotos de perfil dos usuários
    match /profile_photos/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Regras para documentos relacionados aos leads do CRM
    match /crm_lead_documents/{leadId}/{allPaths=**} {
      allow read, write, delete: if request.auth != null &&
                                  (isUserAdmin(request.auth.uid) || isLeadOwner(request.auth.uid, leadId));
    }

    // Regras para mídias de chat (áudio, imagem)
    match /chat_media/{leadId}/{allPaths=**} {
      allow read, write, delete: if request.auth != null &&
                                  (isUserAdmin(request.auth.uid) || isLeadOwner(request.auth.uid, leadId));
    }
  }
}
