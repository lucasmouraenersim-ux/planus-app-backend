rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all reads/writes for security
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access to the weather_reports collection and any documents within it.
    // This is necessary for the weather map to display reports to all users.
    match /weather_reports/{document=**} {
      allow read: if true;
      allow write: if request.auth != null; // Allow authenticated users to write
    }
  }
}
